 CC = g++ CFLAGS = -g -Wall  SRCS = $(wildcard ./*.cpp) PROG = SampleGenerator  OPENCV = -I/usr/local/include/opencv4 -L/usr/local/lib -lopencv_world LIBS = $(OPENCV)  OBJECTS = $(patsubst %.cpp,%.o,$(SRCS))  all: $(SRCS) $(PROG)  %.o : %.cpp 	@echo Compiling: $< 	@$(CC) $(CFLAGS) -c $< -o $@ $(OPENCV)  $(PROG) : $(OBJECTS) 	@echo Linking: $@ 	@$(CC) -std=c++11 -o $@ $(OBJECTS) $(OPENCV)  clean: 	rm -f $(PROG) 	rm -f $(OBJECTS)
